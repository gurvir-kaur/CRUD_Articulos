
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }}  {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('main.css.twig') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <style>
        body{
            padding: 1em;
            margin-left: 1em;
        }
        a, #submit {
            display: inline-block;
            background-color: #F5F5F5;
            color: black;
            padding: 25px;
            text-align: center;
            text-decoration: none;
            margin-left: auto;
            margin-right: auto;
            margin: 5px;
        }
        a:hover{
            background-color: #e0e0e0;
        }


    </style>

    <h1>Write the new values for the article:</h1>

    <form action="{{ path('modified_articulo',{'id':articulo.id} ) }}" method="post">

        ID: <input type="number" name="id" value="{{ articulo.id }}">
        <br>
        <br>
        Titulo: <input type="text" name="titulo" value="{{ articulo.titulo }}">
        <br>
        <br>
        Contenido: <input type="text" name="contenido" value="{{ articulo.contenido }}">
        <br>
        <br>
        <input id="submit" type="submit" value="Submit">


    </form>
{% endblock %}

