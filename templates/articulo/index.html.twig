
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} CRUD {% endblock %}


{% block body %}
    <style>
        body{
            padding: 1em;
            margin-left: 1em;
        }
        a, #submit {
            display: inline-block;
            background-color: #F5F5F5;
            color: black;
            padding: 25px;
            text-align: center;
            text-decoration: none;
            margin-left: auto;
            margin-right: auto;
            margin: 5px;
        }
        a:hover{
            background-color: #e0e0e0;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            border-top: 1px solid #000;
            border-left: 1px solid #000;
            border-right: 1px solid #000;
            margin-bottom: 5px;
        }

        tr:hover {background-color:#f5f5f5;}

        td, th {
            border-bottom: 1px solid #000;
            text-align: center;
            padding: 5px;
        }

        td{
            width: 10%;
        }
        th{
            width: 3%;
        }
        h1{
            text-align: center;
        }
    </style>

    <h1>Articulos</h1>
    <hr>
    <h2>Añadir articulo:</h2>

    <form action="{{ path('add_articulo') }}" method="post">

        Titulo: <input type="text" name="titulo" >
        <br>
        <br>
        Contenido: <input type="text" name="contenido" >
        <br>
        <br>
        Fecha de creación: <input type="text" name="fecha_de_creacion">
        <br>
        <br>
        <input id="submit" type="submit" value="Submit">


    </form>

    <hr>
    <h2>Lista de Articulos</h2>
    {% for articulos in articulos %}

        <table>
            <tr>
                <th>ID de Articulo</th>
                <th>Titulo</th>
                <th>Contenido</th>
                <th>Fecha de creación</th>
                <th colspan="3">Operations</th>
            </tr>
            <tr>
                <td>{{ articulos.id }}</td>
                <td>{{ articulos.titulo }}</td>
                <td>{{ articulos.contenido }}</td>

                <td><a style="
        display: inline-block;
        background-color: #4caf509c;
        color: black;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;"
                       href = "{{ path('modify_articulo', {'id':articulos.id}) }}" >Modify</a>
                </td>
                <td>
                    <a style="
        display: inline-block;
        background-color: #ff5722a6;
        color: black;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;"
                       href = "{{ path('delete_articulo', {'id':articulos.id} ) }}" >Delete</a>
                </td>

            </tr>
        </table>

    {% endfor %}

{% endblock %}

